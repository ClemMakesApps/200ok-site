<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <hr class="border-thick">
      <!-- Speaker 01 -->
      <a class="anchor"></a>
      <div class="row">
        <div class="col-sm-3">
          <div class="speaker-item"> <a href="#">
            <figure class="speaker accent-bg"> <img src="<%- page.photo %>" alt="Speaker" class="img-responsive center-block" height="500" width="500">
              <figcaption>
                <p class="text-uppercase accent"><%- page.time %></p>
                <!-- <p>04/10/2016 - 3PM</p> -->
              </figcaption>
            </figure>
            </a>
            <ul class="list-inline social-buttons">
              <li> <a class="fa fa-twitter fa-lg" href="<%- page.twitter %>" target="_blank"></a> </li>
              <li> <a class="fa fa-linkedin fa-lg" href="<%- page.linkedin %>" target="_blank"></a> </li>
              <li> <a class="fa fa-github fa-lg" href="<%- page.github %>" target="_blank"></a> </li>
            </ul>
          </div>
        </div>
        <div class="col-sm-9">
          <h2 class="accent"><i class="fa fa-star"></i> <%- page.speaker %></h2>
          <h3 class="talktitle"><%- page.talk %></h3>
          <hr class="border-light mrgn-30-top">
          <p class="lead accent"><%- page.content %></p>
          <hr class="border-light mrgn-30-top">
          <p><%- page.bio %></p>
        </div>
      </div>
      <!-- /.Speaker 01 -->
    </div>
  </div>
</div>
